-- โหลด Rayfield UI
local Rayfield = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()

-- การตั้งค่า
local autoClicking = false
local debounceTime = 0.05
local clickCount = 0
local maxClicks = 50

-- อ้างอิงศพใน workspace (ต้องเปลี่ยนชื่อให้ตรงกับศพของคุณ)
local corpse = workspace:FindFirstChild("Corpse")

-- ฟังก์ชันกดซ้ำศพ
local function clickCorpse()
	if corpse and corpse.Parent then
		clickCount += 1
		print("Clicked! (" .. clickCount .. "/" .. maxClicks .. ")")
		if clickCount >= maxClicks then
			corpse:Destroy()
			print("Corpse destroyed!")
		end
	end
end

-- สร้าง UI ด้วย Rayfield
local Window = Rayfield:CreateWindow({
	Name = "Corpse Clicker",
	LoadingTitle = "Clicking System",
	ConfigurationSaving = {
		Enabled = false
	}
})

local Tab = Window:CreateTab("Main", 4483362458)

-- ปุ่มคลิก 1 ครั้ง
Tab:CreateButton({
	Name = "Click Corpse (Manual)",
	Callback = function()
		clickCorpse()
	end,
})

-- ปุ่มเปิด/ปิด Auto Click
Tab:CreateToggle({
	Name = "Auto Click Corpse",
	CurrentValue = false,
	Callback = function(value)
		autoClicking = value
		while autoClicking and corpse and corpse.Parent do
			clickCorpse()
			task.wait(debounceTime)
		end
	end,
})

-- รองรับการกดปุ่ม X บนคีย์บอร์ด
local UserInputService = game:GetService("UserInputService")
UserInputService.InputBegan:Connect(function(input, isProcessed)
	if isProcessed then return end
	if input.KeyCode == Enum.KeyCode.X then
		clickCorpse()
	end
end)
